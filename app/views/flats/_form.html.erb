<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3">
    <%= simple_form_for(@flat) do |f| %>
      <% if @flat.errors.any? %>
       <div class="errors-container">
          <ul>
            <% @flat.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit "Make money ðŸ¤‘", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
